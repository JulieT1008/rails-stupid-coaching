<div class="card">
  <div class="card-header">
    Your question is:
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%=params[:question]%></p>
    </blockquote>
  </div>
</div>


<div class="card mt-2">
  <div class="card-header">
    The coach answer is:
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%=@answer%></p>
    </blockquote>
  </div>
</div>

<button type="button" class="btn btn-info mt-2"><%=link_to "Ask a new question", ask_path%></button>
